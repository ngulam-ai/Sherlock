<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <b:Container>
        <b:Row>
            <b:Column size="XS_12">
                <b:PageHeader text="Settings" subText="" paddingTop="20"/>

                <b:Column size="XS_12">
                    <b:Panel>
                        <b:PanelHeader>
                            <b:Heading size="H3" text="Name DSP"/>
                            <!--<b:Heading size="H3" text="Secret"/>-->
                        </b:PanelHeader>
                        <b:PanelBody>
                            <b:Row>
                                <b:Column size="XS_4">
                                    <b.html:Text ui:field="nameText1">
                                        DSP
                                    </b.html:Text>
                                </b:Column>
                                <b:Column size="XS_4">
                                    <b.html:Text>
                                        Secret_ID
                                    </b.html:Text>
                                    <b:TextBox ui:field="textSecretId"/>
                                </b:Column>
                                <b:Column size="XS_4">
                                    <b.html:Text>
                                        Secret
                                    </b.html:Text>
                                    <b:TextBox ui:field="textSecret"/>
                                </b:Column>
                                <b:Column size="XS_4">
                                    <b:Button ui:field="buttonSave" text="save"/>
                                </b:Column>
                            </b:Row>
                        </b:PanelBody>
                    </b:Panel>
                </b:Column>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>